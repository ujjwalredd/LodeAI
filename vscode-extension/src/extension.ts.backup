            Logger.info(`resolveWebviewView called for viewType: ${LodeAIWebviewProvider.viewType}`);
            this._webviewView = webviewView;
            
            webviewView.webview.options = {
                enableScripts: true,
                localResourceRoots: [this._extensionUri]
